@using DoAnWeb.Models;
@model IEnumerable<DonDatHang>

@{
    ViewBag.Title = "DaGiaoDaThanhToan";
    Layout = "~/Views/Layouts/AdminLayout.cshtml";
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 10);
}
<h2 style="font-weight: bold; text-align: center; margin: 0px;">ĐƠN HÀNG</h2>
<hr />
<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link" id="home-tab" href="@Url.Action("ChuaThanhToan","QuanLyDonHang")" role="tab">Chưa Thanh Toán</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="profile-tab" href="@Url.Action("ChuaGiao","QuanLyDonHang")" role="tab">Chưa Giao</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" id="contact-tab" href="@Url.Action("DaGiaoDaThanhToan","QuanLyDonHang")" role="tab">Đã Thanh Toán</a>
    </li>
</ul>

@grid.GetHtml(
    tableStyle: "gridTable table", // the table
    headerStyle: "gridhead header", //the header
    footerStyle: "gridFooter", //the phan trang
    rowStyle: "gridRow",       //hang le
    alternatingRowStyle: "gridAltRow", //hang chan
    columns: grid.Columns(
    grid.Column("MaDDH", "MaSP"),
    grid.Column("MaKH", header: "Ho Ten KH", format: p => p.MaKH != null ? p.KhachHang.TenKH : ""),
    grid.Column("NgayDat", "Ngay Dat"),
    grid.Column("NgayGiao", "Ngay Giao"),
    grid.Column("DaThanhToan", "Da Thanh Toan"),
    grid.Column("UuDai", "UuDai")

    ))

<style>
    .gridTable {
        text-align: center;
        border: 1px solid;
    }

    .gridAltRow img,
    .gridRow img {
        height: 150px;
        width: 150px;
    }

    .gridAltRow {
        background-color: #ccc
    }

    .active {
        color: red !important;
    }
</style>
