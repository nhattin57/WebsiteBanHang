
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Layouts/HomeLayout.cshtml";
}

<div id="popup_login">
    <div id="login">
        <form action="" id="form-login" method="post">
            <h1 class="form-heading"><span>Đăng nhập</span></h1>
            <div class="form-group">
                <i class="fa fa-user"></i>
                <input type="text" name="txtTaiKhoan" class="form-input" placeholder="Tài Khoản">
            </div>
            <div class="form-group">
                <i class="fa fa-key"></i>
                <input type="password" name="txtMatKhau" class="form-input" placeholder="Mật khẩu">
            </div>
            <div>
                <h2 style="color:red">@ViewBag.NhapDuThongTin @ViewBag.Loi</h2>
            </div>
            <input type="submit" value="Đăng nhập" class="form-submit">
            <br />
            <div style="text-align:center"> <a style="color:red" href="@Url.Action("Index","Home")">Thoát</a></div>
            <p>
                Bạn chưa có tài khoản? Đăng ký <a style="color:red; text-decoration-line: underline" href="@Url.Action("DangKy","Home")"> tại đây.</a>
            </p>
        </form>
    </div>
</div>

<style>
    #popup_login {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,.5);
        z-index: 99;
    }
</style>